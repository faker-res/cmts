<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kthcorp.cmts.mapper.SchedTargetMappingOrigMapper">

    <select id="getSchedTargetMappingOrigList" resultType="SchedTargetMappingOrig" parameterType="SchedTargetMappingOrig">
        /* getSchedTargetMappingOrigList */
        select
          idx, type, rank, tg_id
        from sched_target_mapping_orig
        where type = #{type}
        <if test='rank != null and rank > 0'>
            and rank = #{rank}
        </if>
        order by tg_id asc
    </select>
</mapper>